<!DOCTYPE html>
<html>
  <head>
    <title>Mymemo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/b805f4612c.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
     <% if user_signed_in? %>
      <li>
        <%= link_to "TOP", expenses_path %>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        <%= link_to "レポート", aggregates_path %>
        <%= link_to "出金リスト", expenses_list_path %>
        <%= link_to "アルバム", expenses_album_path %>
        <%= link_to "お気に入り", expenses_favorite_expenses_path %>

        <%= form_with url: search_expenses_path, method: :get, local: true do |form| %>
          <%= form.text_field :search %>
          <%= form.submit :search %>
        <% end %>
      </li>
    <% else %>
      <li>
        <%= link_to "新規登録", new_user_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_user_session_path %>
      </li>
    <% end %>

    <%= yield %>
  </body>
</html>
