<div class="container">
  <div class="row">
   <h5><div class = "bg-light mt-4 col-12 md-6">
       お問い合わせ</div></h5>
   </div>
   <div class="row ml-4 ">
  <div class="col-12 mt-3">
<%= form_with model: @inquiry, url: inquiries_create_path, local:true do |f| %>

  <div class="form-group">
    <%= f.label :email, '返信先メールアドレス' %>
    <p><%= f.text_field :email %></p>
  </div>

 <div class="form-group">
   <p><%= f.label :message, 'お問い合わせ内容' %></p>
   <p><%= f.text_area :message, size: '20x3' %></p>
 </div>

  <%= f.submit '送信', class: "btn btn-secondary" %>

<% end %>

</div>
</div>