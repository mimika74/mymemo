<center>


<table>

<div class="mt-3">
<% @expenses.each do |expense| %>


    <tr class="shadow-lg">
    <td>
    <%= link_to expense_path(expense.id) do %>
      <%= attachment_image_tag expense, :image, :fill, 300, 300, format: 'jpeg', fallback: "" %>
    <% end %>
    </td>

    <td>
    <center>
    <%= expense.date.strftime(" %Y年%-m月%-d日 ") %>
    <div class="mt-3">
    <p>¥<%= expense.expense %></p></div>
    <p><%= expense.memo %></p>

    <div id ="likes_buttons_<%= expense.id %>" >
        <%= render 'favorites/like', expense: expense %>
    </div>
    </center>

    </td>
    </tr>


<% end %>
</div>
</table>


</center>
