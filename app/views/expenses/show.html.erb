<div class="container">
  <div class="row">
   <h5><div class = "bg-light mt-4 col-12 md-6">
       メモ詳細</div></h5>
   </div>

    <center>

        <%= @expense.date.strftime(" %Y年%-m月%-d日 ") %>のメモ
    </center>
 <center>

<div class="d-flex flex-row flex-wrap mx-1 mt-5">
    <% @expenses.each do |expense| %>

      <div class="card mx-auto mt-4 shadow-lg">
      <div class="card-body">


        <%= attachment_image_tag expense, :image, :fill, 300, 300, format: 'jpeg', fallback: "20200501_noimage.jpg", size: "300x300" %>

        <div class="col">
            <h5>¥<%= expense.expense %></h5>
            <p><%= expense.memo %></p>
            <% if expense.image %>
            <div id ="likes_buttons_<%= expense.id %>" >
                <%= render 'favorites/like', expense: expense %>
            </div>
            <% end %>
            <div class="mt-3">
            <%= link_to "編集", edit_expense_path(expense), class: "btn btn-outline-secondary" %>

            <%= link_to "削除", expense_path(expense.id), method: :delete, class: "btn btn-outline-secondary" %></div>



        </div>
       </div>
       </div>
    <% end %>
</div>
</div>
</center>



