
<div class="container">
  <div class="row">
   <h5><div class = "bg-light mt-4 col-12 md-6">
      新規登録</div></h5>
   </div>

<div class="row ml-4 ">
  <div class="col-12 mt-3">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


    <div class="field">
    <div class="row">
    <label for="id" class="col-sm-2 col-form-label text-left">
    <%= f.label :ニックネーム %></label>
    <div class="col-sm-10">
    <%= f.text_field :nickname, autofocus: true %>
    </div>
    </div>
    </div>

    <div class="field">
    <div class="row">
    <label for="id" class="col-sm-2 col-form-label text-left">
    <%= f.label :メール %></label>
    <div class="col-sm-10">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    </div>
    </div>


    <div class="field">
    <div class="row">
    <label for="id" class="col-sm-2 col-form-label text-left">
    <%= f.label :パスワード %></label>
    <div class="col-sm-10">
    <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    </div>
    </div>

  <div class="field">
    <div class="row">
    <label for="id" class="col-sm-2 col-form-label text-left">
    <%= f.label :パスワード確認用 %></label>
    <div class="col-sm-10">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  </div>
  </div>


    <div class="field">
    <div class="row">
    <label for="id" class="col-sm-2 col-form-label text-left"></label>
    <div class="col-sm-10">
    <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-outline-secondary" %>
    </div>
    </div>
    </div>

<% end %>

<div class="row">
 <div class = "bg-light mt-4 col-2 md-3">
     すでに登録済みの方</div>
</div>
<div class="row">
  <div class ="ml-5 mt-3">
     <%=link_to'こちら',  new_user_session_path %> からログインしてください</div>
  </div>
</div>

