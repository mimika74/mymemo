<div class="container">
  <div class="row">
   <h5><div class = "bg-light mt-4 col-12 md-6">
      ログイン</div></h5>
   </div>

<div class="row ml-4 ">
  <div class="col-12 mt-3">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <div class="row">
    <label for="id" class="col-sm-2 col-form-label text-left">
    <%= f.label :メールアドレス %></label>
    <div class="col-sm-10">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  </div>
  </div>

  <div class="field">
    <div class="row">
    <label for="id" class="col-sm-2 col-form-label text-left">
    <%= f.label :パスワード %></label>
    <div class="col-sm-10">
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>
  </div>




    <div class="field">
    <div class="row">
    <label for="id" class="col-sm-2 col-form-label text-left"></label>
    <div class="col-sm-10">
    <div class="actions">
    <%= f.submit "ログインする", class: "btn btn-outline-secondary" %>
    </div>
    </div>
    </div>
<% end %>

    </div>
  </div>


  <div class="row">
    <div class = "bg-light mt-4 col-3 md-2">
       会員登録がお済みでない方</div>
  </div>
  <div class="row">
    <div class="ml-5 mt-3">
      <%= link_to "こちら", new_user_registration_path %> から新規登録を行ってください.
    </div>
  </div>
</div>
</div>
